<html>

<%- include('./partials/head.ejs')  %>

<body>
    <div class='container-fluid'>
        <div class='row'>
            <%- include('./partials/sidebar.ejs') %>
            <div class='col-sm-10'>
                <h1><%= title + ": " + book.title %> </h1>
                <% if (bookinstances_book.length) { %>
                    <p><strong>Delete the following book instances before attempting to delete this book.</strong></p>
                    <h4>Book instances</h4>
                    <ul>

                        <% bookinstances_book.forEach(bookinstance => { %>
                            <li>
                                <a href="<%= bookinstance.url %> "><%= book.title %> </a>
                                <p>Status: <%= bookinstance.status %> </p>
                            </li>
                            <% }) %>
                        </ul>

                <% } else { %>
                    <p>Do you really want to delete this book?</p>
                    <form method='POST' action="">
                        <div class='form-group'>
                            <input id="bookid" name="bookid" class="form-control" type="hidden" required="true" type="text"
                                value="<%= book._id %>">
                            <button class="btn btn-primary" type="submit">Delete</button>
                         
                        </div>

                    </form>
                <% } %>


            </div>
        </div>
    </div>
</body>

</html>